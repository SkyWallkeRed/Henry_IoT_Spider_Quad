    for (;;);
  }
  //  display.setFont(&FreeSansBold9pt7b);
  //  display.setFont();
  delay(2000);
  display.clearDisplay();

  display.setTextSize(2);

  display.setTextColor(WHITE);
  display.clearDisplay();
  display.setCursor(0, 0);
  // Display static text
  display.println(" Loading");
  display.println("  Henry");
  display.display();
  delay(1000);
  display.clearDisplay();
  display.setCursor(0, 0);
  display.println("  Henry");
  display.println("");
  display.println("  Ready");
  display.display();
  delay(1000);
}

